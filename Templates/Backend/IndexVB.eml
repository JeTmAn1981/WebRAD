    Private Sub Page_Load(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles MyBase.Load
	bArchive = False
	
        If Not Page.IsPostBack Then
				LoadFormText()
				%(SelectCookies)%
			    BindData()
				SetSessionVariable("PreviousPage", "index%(AncillaryReference)%.aspx")
        End If
